<configuration>

    <appender name="APP" class="ch.qos.logback.core.FileAppender">
        <file>captains.log</file>
        <encoder>
            <pattern>%d [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>
 
    <root level="info">
        <appender-ref ref="APP"/>
    </root>
  
</configuration>
